{
    "name": "iamgerwin/toon-php",
    "description": "A lightweight, fast, and feature-rich TOON (Token-Oriented Object Notation) library for PHP - optimized for LLM contexts with 30-60% token savings",
    "keywords": [
        "toon",
        "toon-php",
        "serialization",
        "llm",
        "token-optimization",
        "data-format"
    ],
    "homepage": "https://github.com/iamgerwin/toon-php",
    "license": "MIT",
    "authors": [
        {
            "name": "iamgerwin",
            "email": "iamgerwin@live.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.10|^2.0",
        "phpstan/extension-installer": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "iamgerwin\\Toon\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "iamgerwin\\Toon\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
